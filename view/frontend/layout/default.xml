<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <!-- Add iOS meta tags and icons -->
        <meta name="apple-mobile-web-app-capable" content="yes"/>
        <meta name="apple-mobile-web-app-status-bar-style" content="default"/>
    </head>
    <body>
        <referenceContainer name="head.additional">
            <block name="pwa.theme-color" template="MageSuite_Pwa::theme-color.phtml" ifconfig="pwa/general/is_enabled">
                <arguments>
                    <argument name="view_model" xsi:type="object">MageSuite\Pwa\Model\Data\ViewModel</argument>
                </arguments>
            </block>
            <block name="pwa.manifest.meta" template="MageSuite_Pwa::manifest-meta.phtml" ifconfig="pwa/general/is_enabled">
                <block name="pwa.manifest.title" template="MageSuite_Pwa::apple-mobile-web-app-title.phtml">
                    <arguments>
                        <argument name="view_model" xsi:type="object">MageSuite\Pwa\Model\Data\ViewModel</argument>
                    </arguments>
                </block>
            </block>
        </referenceContainer>
        <referenceContainer name="before.body.end">
            <block name="pwa.service-worker.register" template="MageSuite_Pwa::service-worker/register.phtml" after="-" ifconfig="pwa/general/is_enabled"/>
            <block name="pwa.custom-notification" template="MageSuite_Pwa::custom-notification.phtml" after="-" ifconfig="pwa/general/is_enabled">
                <arguments>
                    <argument name="js_config" xsi:type="array">
                        <item name="titleText" xsi:type="string" translate="true">Add to homescreen</item>
                        <item name="contentText" xsi:type="string" translate="true">Now add the MageSuite Demo Shop to your homescreen with one click</item>
                        <item name="acceptButtonText" xsi:type="string" translate="true">Add to homescreen</item>
                        <item name="iOSbanner" xsi:type="array">
                            <item name="modalContent" xsi:type="string" translate="true">Install this webapp on your %device%: tap %icon% and then "Add to homescreen"</item>
                            <item name="closeButtonText" xsi:type="string" translate="true">Close</item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
